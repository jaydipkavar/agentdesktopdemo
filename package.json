{
  "name": "agentact-app",
  "productName": "AgentAct",
  "description": "AgentAct",
  "private": true,
  "version": "2.1.0",
  "type": "module",
  "main": "electron/main.js",
  "author": {
    "name": "jaydeep",
    "email": "pateljaydeep1624@gmail.com"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --win\"",
    "build-linux": "vite build && electron-builder",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-win": "vite build && playwright install && electron-builder"
  },
  "build": {
    "appId": "com.agentact.agentact-app",
    "files": [
      "dist",
      "electron"
    ],
    "extraResources": [
      {
        "from": "node_modules/playwright-core/.local-browsers",
        "to": "playwright-browsers",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/playwright-core",
        "to": "playwright-core"
      },
      {
        "from": "node_modules/electron/dist/icudtl.dat",
        "to": "icudtl.dat"
      },
      {
        "from": "node_modules/electron/dist/locales",
        "to": "locales"
      }
    ],
    "asarUnpack": [
      "node_modules/playwright-core/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "jaydipkavar",
      "repo": "agentdesktopdemo"
    }
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "@uiw/react-codemirror": "^4.24.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.0.11",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "playwright": "^1.53.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-json-pretty": "^2.2.0",
    "react-router-dom": "^7.6.3",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-store": "^10.1.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "firebase": "^11.10.0",
    "globals": "^16.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "wait-on": "^8.0.3"
  }
}
